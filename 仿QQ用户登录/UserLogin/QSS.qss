/*QComboBox右边添加分割块:宽度,线宽度,样式,颜色*/
QComboBox:drop-down {
        width: 32px;
        border-left: 1px solid #CDE6C7;
}
/*QComboBox的箭头样式*/
QComboBox:down-arrow {
        border-image:url("image/login/5.png");
}
/*下面是下拉按钮鼠标放上去的背景图片。*/
QComboBox::down-arrow:hover {
        border-image: url(image/login/6.png);
}
QComboBox::down-arrow:on {
        border-image: url(image/login/7.png);
}
/*下拉列表项:字体样式, 背景*/
QComboBox QAbstractItemView {
        font:20px;
        font-family: 华文宋体;
        font-weight:300;
        outline:0px;             /*去掉下拉框虚线*/
        background: transparent; /*这里设置透明背景只变成深灰色,不设置是白色*/
}

/*程序中写一个self.comboUserId.setView(QListView())就可以设置下拉列表的样式了*/
QComboBox#comboUserId QAbstractItemView::item {
        min-height: 40px;            /*列表高度*/
        min-width: 60px;             /*列表宽度*/
        border-radius:5px;
        background-color:lightgreen; /*列表背景色*/
        color: red;                /*字体的颜色*/
        selection-color:red;         /*选择时显示的字体颜色*/
}
QComboBox#comboUserId QAbstractItemView::item:hover {
        border: 2px solid #005093;   /*列表边框宽度,样式,颜色*/
        background-color: #428BCA;   /*滑过当前列表项的背景色*/
}

QMenu {
        background-color: #cde6c7;
        border: 1px solid #A6A6A6;
        border-radius: 5px;
}

QMenu:item {
        padding: 2px 35px 2px 30px;
        border: 6px solid transparent; /* reserve space for selection border */
}
QMenu:item:selected { /*滑过样式，这里不能用hover*/
        background: rgba(100, 100, 100, 50);
}

QFrame#frameError {background-color: #F9F4D5;}
QLabel#labErrorImg {border-image:url("image/login/error_info.png");}
QPushButton#btnError {border-image:url("image/login/error_btn_normal.png");}
QPushButton#btnError:hover {border-image:url("image/login/error_btn_hover.png");}
