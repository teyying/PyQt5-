QPushButton#btnFrameQRcodeUpdata {border-image: url("image/login/QRcode1.png");}
QPushButton#btnFrameQRcodeUrl {border-image: url("image/login/QRcode2.png");}
QLabel#labFrameQRcodeErrorImg {border-image: url("image/login/QRcode3.png");}
QPushButton#btnFrameQRcodeBack {
        background-color: #02B8FA;
        border-radius:3px;
        font-family: 宋体;
        font-weight:600;
        font-size:17px;
        color:#DEF7FF;
}
QPushButton#btnFrameQRcodeBack:hover {background-color: #1FC7FD;}

QCheckBox#checkBoxAotuLogin,QCheckBox#checkBoxKeepPassword {
