        border-left: 1px solid qlineargradient(x0:0, x1:1,stop: 0 #02B8FA, stop: 1 white);
        border-bottom: 1px solid qlineargradient(y0:0, y1:1,stop: 0 white, stop: 1 #02B8FA);
